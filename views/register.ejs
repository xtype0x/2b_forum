<!DOCTYPE html>
<html ng-app="register">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Register</title>
  <link rel="stylesheet" href="/components/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/components/alertify.js/themes/alertify.core.css">
  <link rel="stylesheet" href="/components/alertify.js/themes/alertify.default.css">

  <script src="/components/jquery/dist/jquery.min.js"></script>
  <script src="/components/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="/components/angular/angular.min.js"></script>
    <script src="/components/alertify.js/lib/alertify.min.js"></script>
  <script src="/register.js"></script>
</head>
<body ng-controller="register_controller">
<%- include layout/navbar%>
  <div class="container">
    <h1>註冊</h1>
    <form class="form-horizontal" style="width:600px;text-align:center;">
      <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" ng-model="ggform.name">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" ng-model="ggform.password">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Password Repeat</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" ng-model="ggform.password2">
        </div>
      </div>
      <button class="btn btn-primary" ng-click="register()">Submit</button>
    </form>
  </div>
</body>
</html>